<%- include("../partials/header") %>

<div id="border-box">
    <div id="box">
        <div>
        
            <h1><%= blog.title %></h1>
            <p><strong><%= blog.author %></strong></p>
            <p><%= blog.body %></p>
            <span class="likes">Dislikes - <%= blog.dislikes %></span>
            <span class="likes">Likes - <%= blog.likes %></span>
        
        </div>
        
        
        <div class="comments">
            <% blog.comments.forEach(function(comment){ %>
            <div class="comment">
                <p><strong><%= comment.author %></strong> - <span><%= comment.body %></span></p>
            </div>
            <% }) %>
        </div>
    </div>
</div>



<%- include("../partials/footer") %>